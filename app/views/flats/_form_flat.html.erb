<div class="container">
  <div class="row">
    <div class="col-6 m-auto">
        <div class="flat-form">
          <% if @flat.id.nil? %>
            <h1>Add new flat</h1>
          <% else %>
            <h1>Edit flat</h1>
          <% end %>

          <%= simple_form_for @flat do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :price_per_night %>
          <%= f.input :number_of_guests %>
          <%= f.submit(@flat.nil? ? "Add Flat" : "Update", class: "btn btn-primary") %>
          <% end %>
        </div>
    </div>
  </div>
</div>
